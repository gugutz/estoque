<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="rootPane" minHeight="400.0" minWidth="800.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Router">
   <top>
      <VBox prefHeight="39.0" prefWidth="400.0" BorderPane.alignment="CENTER">
         <children>
            <HBox />
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                    <MenuItem fx:id="menu_close" mnemonicParsing="false" onAction="#closeApplication" text="Close" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Delete" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem mnemonicParsing="false" text="About" />
                  </items>
                </Menu>
                  <Menu mnemonicParsing="false" text="Unspecified Menu">
                    <items>
                      <MenuItem mnemonicParsing="false" text="Action 1" />
                    </items>
                  </Menu>
              </menus>
            </MenuBar>
            <HBox>
               <children>
                  <Button fx:id="linkMain" alignment="CENTER" defaultButton="true" mnemonicParsing="false" onAction="#linkMainClicked" text="Ver Estoque">
                     <HBox.margin>
                        <Insets right="3.0" top="3.0" />
                     </HBox.margin></Button>
                  <Button fx:id="linkAddItem" alignment="CENTER" defaultButton="true" mnemonicParsing="false" onAction="#linkAddItemClicked" text="Adicionar Item">
                     <HBox.margin>
                        <Insets right="3.0" top="3.0" />
                     </HBox.margin></Button>
                  <Button fx:id="linkRemoveItem" alignment="CENTER" defaultButton="true" mnemonicParsing="false" onAction="#linkRemoveItemClicked" text="Remover Item">
                     <HBox.margin>
                        <Insets right="3.0" top="3.0" />
                     </HBox.margin></Button>
                  <Button fx:id="linkItemDetails" alignment="CENTER" defaultButton="true" layoutX="220.0" layoutY="10.0" mnemonicParsing="false" onAction="#linkItemDetailsClicked" text="Ver Detalhes Produto">
                     <HBox.margin>
                        <Insets right="3.0" top="3.0" />
                     </HBox.margin>
                  </Button>
                  <Region HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <BorderPane fx:id="contentPane" />
         </children>
      </HBox>
   </center>
   <bottom>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="bottomInfoLabel" text="Info" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
