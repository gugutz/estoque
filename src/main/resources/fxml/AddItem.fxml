<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.162-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AddItem">
   <children>
      <BorderPane>
         <top>
            <VBox BorderPane.alignment="CENTER">
               <children>
                  <HBox>
                     <children>
                        <ImageView pickOnBounds="true" preserveRatio="true" HBox.hgrow="NEVER">
                           <HBox.margin>
                              <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                           </HBox.margin>
                        </ImageView>
                        <Region />
                        <VBox prefHeight="583.0" prefWidth="465.0">
                           <children>
                              <Label text="Adicionar Item ao Estoque">
                                 <font>
                                    <Font size="22.0" />
                                 </font>
                                 <padding>
                                    <Insets bottom="15.0" top="30.0" />
                                 </padding>
                              </Label>
                              <Label text="Codigo do produto" />
                              <TextField fx:id="productCode" prefHeight="26.0" prefWidth="345.0">
                                 <VBox.margin>
                                    <Insets bottom="10.0" right="15.0" />
                                 </VBox.margin>
                              </TextField>
                              <Label text="Linha" />
                              <TextField fx:id="productLine">
                                 <VBox.margin>
                                    <Insets bottom="15.0" right="15.0" />
                                 </VBox.margin>
                              </TextField>
                              <Label text="Descricao" />
                              <TextField fx:id="productDescription">
                                 <VBox.margin>
                                    <Insets bottom="15.0" right="15.0" />
                                 </VBox.margin>
                              </TextField>
                              <Label text="Peso (kg)" />
                              <TextField fx:id="productWeight">
                                 <VBox.margin>
                                    <Insets bottom="15.0" right="15.0" />
                                 </VBox.margin>
                              </TextField>
                              <Button fx:id="addItemButton" mnemonicParsing="false" onAction="#addItemToDatabase" text="Salva Item no Estoque" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </top>
      </BorderPane>
   </children>
</AnchorPane>
