<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane minHeight="400.0" minWidth="800.0" xmlns="http://javafx.com/javafx/8.0.162-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.controller.MainController">
   <top>
      <VBox prefHeight="39.0" prefWidth="400.0" BorderPane.alignment="CENTER">
         <children>
            <HBox />
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Close" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Delete" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem mnemonicParsing="false" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <HBox>
               <children>
                  <Button fx:id="linkMain" alignment="CENTER" defaultButton="true" mnemonicParsing="false" onAction="#linkMainClicked" text="Ver Estoque" />
                  <Button fx:id="linkAddItem" alignment="CENTER" defaultButton="true" mnemonicParsing="false" onAction="#linkAddItemClicked" text="Adicionar Item" />
                  <Button fx:id="linkRemoveItem" alignment="CENTER" defaultButton="true" mnemonicParsing="false" onAction="#linkRemoveItemClicked" text="Remover Item" />
                  <Region HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <BorderPane fx:id="contentPane" />
         </children>
      </HBox>
   </center>
   <bottom>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="bottomInfoLabel" text="Info" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
